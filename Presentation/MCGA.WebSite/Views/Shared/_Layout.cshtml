<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,400i,700,700i,900,900i" rel="stylesheet">
</head>
<body>
  

    <div class="top-header">
        <!-- top header -->
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-12"><a class="logo" href="index.html"><img src="images/logo.jpg" alt=""></a> </div>
                <div class="col-md-9 hidden-sm hidden-xs">
                    <div class="top-link">
                        <div class="row">
                            <div class="col-md-6">
                                <i class="fa fa-clock-o"></i>Mon to sat: 10:00am to 6:00pm
                            </div>
                            <div class="col-md-3">
                                <i class="fa fa-phone"></i> <a href="cantact-us.html">+91 123 4567 789</a>
                            </div>
                            <div class="col-md-3">
                                <i class="fa fa-envelope-o"></i> <a href="cantact-us.html">info@cardio.com</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="intro-section">
        <!-- intro section -->
        <div class="">
            <!-- navigation-transparent -->
            <div id="sticky-wrapper" class="sticky-wrapper" style="height: 50px;">
                <div class="header" style="">
                    <!-- navigation -->
                    <div class="container">
                        <div class="row">

                            <div class="col-md-10 col-sm-12">
                                <div id="navigation" class="navigation">
                                    <div id="menu-button">Menu</div>
                                    <ul>
                                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { @class = "animsition-link" })</li>
                                        @*<li class="has-sub">
                <span class="submenu-button"></span><a href="service-list.html" title="Service" class="animsition-link">Service List</a>
                <ul>
                    <li><a href="service-list.html" title="Service List">Service List</a></li>
                    <li><a href="service-detail.html" title="Service Detail">Service Detail</a></li>
                </ul>
            </li>
            <li class="has-sub">
                <span class="submenu-button"></span><a href="blog.html" title="Blog" class="animsition-link">Blog</a>
                <ul>
                    <li><a href="blog.html" title="Blog" class="animsition-link">Blog</a></li>
                    <li><a href="blog-single.html" title="Blog Single" class="animsition-link">Blog Single</a></li>
                </ul>
            </li>*@
                                        <li>@Html.ActionLink("Acerca de", "About", "Home", new { @class = "animsition-link" })</li>
                                        <li>@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "animsition-link" })</li>
                                    </ul>
                                    @Html.Partial("_LoginPartial")
                                </div>
                            </div>
                            <div class="col-md-2 hidden-sm hidden-xs navigation-search">
                                <a href="#"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.navigation -->

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/caurosel/caurosel_1.jpg" alt="Los Angeles" />
                </div>

                <div class="item">
                    <img src="~/images/caurosel/caurosel_2.jpg" alt="Chicago" />
                </div>

                <div class="item">
                    <img src="~/images/caurosel/caurosel_3.jpg" alt="New York" />
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
